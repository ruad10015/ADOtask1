<Window x:Class="ADOtask1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADOtask1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">

            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="CategoryComboBox" Height="30" Width="150" VerticalAlignment="Top" SelectionChanged="ComboBox_SelectionChanged"/>
                <ComboBox x:Name="BookComboBox" Height="30" Width="150" VerticalAlignment="Top" Margin="50 0 0 0" />
                
            </StackPanel>

            <StackPanel Margin="0 50 0 0" Orientation="Horizontal">
                <TextBox x:Name="txtbox" Width="300" Height="40" HorizontalAlignment="Left"/>
                <Button x:Name="btn" Width="150" Height="40" Content="Submit" HorizontalAlignment="Center" Click="Button_Click" />
                <TextBlock Width="240" FontSize="15" FontStyle="Italic" Foreground="Green" x:Name="txtblock"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
